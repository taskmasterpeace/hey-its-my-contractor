# Production Environment Variables
# Copy this file and update with your production values

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Database
DB_USER=contractor_prod_user
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/contractor_platform

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# External APIs
ASSEMBLYAI_API_KEY=your_production_assemblyai_key
PERPLEXITY_API_KEY=your_production_perplexity_key
OPENWEATHER_API_KEY=your_production_openweather_key

# Authentication (Ory Kratos)
KRATOS_PUBLIC_URL=https://auth.${DOMAIN}
KRATOS_ADMIN_URL=http://kratos:4434
KRATOS_SECRET_KEY=your_32_character_secret_key_here

# File Storage (AWS S3)
S3_BUCKET=contractor-platform-files
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY=your_aws_access_key
S3_SECRET_KEY=your_aws_secret_key

# Rocket.Chat
ROCKETCHAT_URL=https://chat.${DOMAIN}
ROCKETCHAT_ADMIN_USER=admin
ROCKETCHAT_ADMIN_PASS=your_secure_rocketchat_admin_password
ROCKETCHAT_ADMIN_EMAIL=admin@${DOMAIN}

# Email Configuration
MAIL_URL=smtp://username:password@smtp.mailgun.org:587
SMTP_FROM=noreply@${DOMAIN}

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Application
NODE_ENV=production
LOG_LEVEL=info
API_RATE_LIMIT=100

# Backup Configuration
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=contractor-platform-backups