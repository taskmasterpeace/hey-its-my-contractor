# Environment Variables Template
# Copy this file to .env and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# For mobile (Expo)
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Ory Kratos
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_ADMIN_URL=http://localhost:4434

# External APIs
ASSEMBLYAI_API_KEY=your_assemblyai_key
PERPLEXITY_API_KEY=your_perplexity_key
OPENWEATHER_API_KEY=your_openweather_key

# DocuSeal Integration
DOCUSEAL_API_KEY=your_docuseal_api_key_here

# Google Custom Search for Images (Contractor Search Engine)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_CSE_ID=23de2758e19a541ef

# Storage (MinIO for local dev)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=contractor_minio
MINIO_SECRET_KEY=contractor_minio_password
MINIO_BUCKET=contractor-files

# Chat (Rocket.Chat)
ROCKETCHAT_URL=http://localhost:3001
ROCKETCHAT_ADMIN_USER=admin
ROCKETCHAT_ADMIN_PASS=admin_password

# Email (Mailhog for local dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=noreply@contractorplatform.dev

# File Uploads
UPLOAD_URL=http://localhost:1080/files/
UPLOAD_MAX_SIZE=50000000

# Database (for local development with Docker)
DATABASE_URL=postgresql://postgres:contractor_dev_password@localhost:5432/contractor_platform

# Redis
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development
LOG_LEVEL=debug