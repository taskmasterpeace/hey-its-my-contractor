{
  "expo": {
    "name": "Contractor Platform",
    "slug": "contractor-platform",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.contractorplatform.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.contractorplatform.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Contractor Platform to access your camera to take photos of job sites."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Contractor Platform to access your photo library to upload project images.",
          "savePhotosPermission": "Allow Contractor Platform to save photos to your photo library."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Contractor Platform to use your location to track job site visits and weather data."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}