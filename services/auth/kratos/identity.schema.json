{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contractor Platform User",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "first_name": {
          "type": "string",
          "title": "First Name"
        },
        "last_name": {
          "type": "string",
          "title": "Last Name"
        },
        "phone": {
          "type": "string",
          "title": "Phone Number"
        },
        "company": {
          "type": "string",
          "title": "Company"
        },
        "role": {
          "type": "string",
          "title": "Role",
          "enum": ["contractor", "staff", "sub", "homeowner", "admin"],
          "default": "homeowner"
        },
        "tenant_id": {
          "type": "string",
          "title": "Tenant ID"
        }
      },
      "required": [
        "email",
        "first_name",
        "last_name",
        "role"
      ],
      "additionalProperties": false
    }
  }
}